{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [],
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 6
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "no-console": "off"
    },
    "globals": {
        "$": true
    }
}
